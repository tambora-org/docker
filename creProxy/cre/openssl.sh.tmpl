#!/bin/sh 

# Current Container Name : {{ $CurrentContainer.Name }}
if ! [ -e /etc/letsencrypt/openssl ]
then
   mkdir /etc/letsencrypt/openssl
fi

{{ if (not (exists "/etc/letsencrypt/openssl/dhparam.pem")) }}
if ! [ -e /etc/letsencrypt/openssl/dhparam.pem ]
then
   openssl dhparam -out /etc/letsencrypt/openssl/dhparam.pem 4096
fi
{{ end }}

{{ $CurrentDomain := or $CurrentContainer.Env.CRE_DOMAIN "localhost" }}

openssl req -batch -config /cre/glue/openssl.cfg -new -x509 -sha256 -newkey rsa:2048 -nodes -keyout /etc/letsencrypt/openssl/{{ $CurrentDomain }}.key.pem -days 365 -out /etc/letsencrypt/openssl/{{ $CurrentDomain }}.cert.pem

{{ range $subdomain, $containers := groupByMulti $ "Env.CRE_SUBDOMAIN" "," }}

{{ $subdomain := trim $subdomain }}
{{ $host := (printf "%s.%s" $subdomain $CurrentDomain) }}

# {{ $host }}
# for localhost create openssl self-signed
openssl req -batch -config /cre/glue/openssl.cfg -new -x509 -sha256 -newkey rsa:2048 -nodes -keyout /etc/letsencrypt/openssl/{{ $host }}.key.pem -days 365 -out /etc/letsencrypt/openssl/{{ $host }}.cert.pem

{{ end }}

